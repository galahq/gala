- content_for :title do
  = I18n.t('cases.settings.edit.edit_case_settings')
  â€”
  = @case.short_title


.window.admin
  .admin-card.bp3-card.bp3-elevation-2
    = link_to case_path @case do
      .case-cover-card-top{ style: "background-image: url(#{@case.cover_url})" }
        %span.admin__table__slug= @case.short_title

    %div
      %h1.admin__title= t '.edit_case_settings'
      = render 'slug_form', kase: @case
      = render 'library_form', kase: @case, libraries: @libraries
      = render 'license_form', kase: @case
      = render 'featured_form', kase: @case

  .admin-card__sidebar.bp3-dark.spaced--compact
    = render 'editorships/list', editorships: @editorships

    .admin-card__sidebar__actions
      = link_to new_case_editorship_path @case do
        %span.bp3-tag.bp3-intent-success
          %span.bp3-icon.bp3-icon-add
          %span= t 'editorships.new.add_editor'
