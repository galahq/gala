= content_for :title, I18n.t('devise.passwords.new.forgot_your_password')

%h2= t '.forgot_your_password'

= form_for(resource, as: resource_name, url: password_path(resource_name),
                     builder: BlueprintFormBuilder,
                     html: { method: :post }) do |f|

  = f.errors 

  = f.form_group :email do |f, error_classes| 
    = f.email_field :email, class: %w[bp3-input bp3-fill] + error_classes, 
                            spellcheck: false

  = f.submit t('.send_me_reset_password_instructions'),
             class: %w[bp3-intent-primary]

= render "devise/shared/links" 
