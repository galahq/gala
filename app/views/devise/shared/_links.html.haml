%ul.devise-links
  
  - if controller_name != 'sessions' && controller_name != 'catalog' && controller_name != 'cases'
    %li= link_to t('.sign_in'), new_session_path(resource_name)

  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li= link_to t('.sign_up_for_a_free_account'), new_registration_path(resource_name)

  %li= link_to t('.review_policies'), 'https://about.learngala.com/policies'

  - if controller_name == 'sessions'
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      %li= link_to t('.forgot_your_password'), new_password_path(resource_name)

    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      %li= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name)

    - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
      %li= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(resource_name)
