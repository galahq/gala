<script src="https://use.typekit.net/adn1xoi.js"></script>
<script>try{Typekit.load({ async: true });}catch(e){}</script>

<%# We don’t want the Japanese font to override the Chinese fonts, in order
  # to prevent simplified characters without different codepoints from being
  # displayed in the Traditional/Japanese manner. %>
<% unless in_locale 'ja' %>
<style>
  @font-face {
    font-family: 'vdl-v7gothic';
    src: url('');
    unicode-range: U+0;
  }
</style>
<% end %>

<% unless in_locale 'zh-CN' %>
<style>
  @font-face {
    font-family: 'source-han-sans-simplified-c';
    src: url('');
    unicode-range: U+0;
  }
</style>
<% end %>

<%# The Japanese font eats Greek and Russian, so we’ll specify something better
  # first, but limit it to Greek’s unicode range %>
<style>
  @font-face {
    font-family: 'greek-and-cyrillic-fallback';
    src: local(-apple-system), local(arial);
    unicode-range: U+0370-052F;
  }
</style>
