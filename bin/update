#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  # This script is a way to update your development environment automatically.
  # Add necessary update steps to this file.

  puts '== Installing dependencies =='
  system! 'docker-compose run web bin/bundle check || \
           docker-compose run web bin/bundle install'
  system! 'docker-compose run web yarn'

  puts "\n== Updating database =="
  system! 'docker-compose run web rails db:migrate'

  puts "\n== Removing old logs and tempfiles =="
  system! 'docker-compose run web rails log:clear tmp:clear'
end
