{
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/dist": true,
        "**/vendor": true,
    },
    "ruby.format": "rubocop",
    "ruby.lint": {
        "rubocop": true
    },
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "files.eol": "\n",
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "javascript.validate.enable": false,
    "typescript.validate.enable": false,
    "flow.enabled": true,
    "flow.useNPMPackagedFlow": true,
    "flow.pathToFlow": "${workspaceFolder}/node_modules/.bin/flow",
    "flow.runOnEdit": true,
    "flow.runOnAllFiles": true,
    "flow.enabled": true,
    "flow.showStatus": true,
    "flow.showUncovered": true,
    "flow.showUncoveredErrors": true,
    "flow.showNoAccessError": true,
    "flow.showUnsupported": true,
    "flow.showFlowAction": true,
    "flow.showSummary": true,
    "prettier.requireConfig": true
}